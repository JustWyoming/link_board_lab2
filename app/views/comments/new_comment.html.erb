<h1> Comment on a comment </h1>

  <div class="parentComment">
    <h3>"<%= @parent_comment.body %>"</h3>
  </div>
    <h4>Reply to Comment</h4>
   <%= form_for @comment, url: comment_comments_path, html: {class: "form"} do |f| %>
      <div class="form-group">
          <%= f.text_area :body, :placeholder => "enter your comment", :class => "form-control" %>
      </div>
          <%= f.submit "Reply", :class => "btn btn-warning btn-sm" %>
    <% end %>